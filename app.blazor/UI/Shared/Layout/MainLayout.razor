@inherits LayoutComponentBase

@using app.blazor.UI.Shared.Components
@using app.blazor.UI.Themes
@using Microsoft.AspNetCore.Components.Authorization
<MudThemeProvider Theme="@AppTheme.Theme" />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="2">
        <MudToolBar Class="w-full">
            <MudContainer MaxWidth="MaxWidth.Medium" Class="d-flex justify-space-between align-center pa-0">
                <MudLink Href="/"><MudImage Src="img/logo/logo.png" Alt="Template App" Width="60" /></MudLink>

                <MudStack Row Class="gap-2">            
                    <MudButton Href="/api/auth/logout" Color="Color.Primary" Variant="Variant.Filled"><MudIcon Icon="@Icons.Material.Filled.Logout" Size="Size.Small"/> Logout</MudButton>
                </MudStack>
            </MudContainer>
        </MudToolBar>
    </MudAppBar>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Medium" Class="pa-0 ma-auto">
            <CascadingAuthenticationState>
                @Body
            </CascadingAuthenticationState>
        </MudContainer>
    </MudMainContent>
</MudLayout>
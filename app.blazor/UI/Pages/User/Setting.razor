
@page "/user/setting"

<PageTitle>Configuração de Usuário</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="ma-auto pa-4">
    <MudPaper Elevation="2" Class="pa-4">
        <MudText Typo="Typo.h5" Class="mb-4">Configuração de Usuário</MudText>
        <MudForm @ref="form">
            <MudTextField Label="Nome de Usuário" @bind-Value="UserSettings.Username" Variant="Variant.Text" Class="mb-3" Style="@($"color:{Colors.BlueGray.Lighten4}")" Disabled="true"/>
            <MudTextField Label="Nome Completo" @bind-Value="UserSettings.FullName" Variant="Variant.Text" Class="mb-3" Style="@($"color:{Colors.BlueGray.Lighten4}")" Disabled="true"/>
            <MudTextField Label="Email" @bind-Value="UserSettings.Email" Variant="Variant.Text" Class="mb-3" Style="@($"color:{Colors.BlueGray.Lighten4}")" Disabled="true"/>
            <MudButton Color="Color.Secondary" Variant="Variant.Filled" Href="/feed" Class="mt-4">Voltar</MudButton>
        </MudForm>
    </MudPaper>
</MudContainer>

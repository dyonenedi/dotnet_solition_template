@page "/auth/callback"
@inject CookieAuthenticationStateProvider AuthProvider
@inject NavigationManager Navigation
@inject IHttpContextAccessor HttpContextAccessor

@code {
    [Parameter]
    public string? token { get; set; }

    protected override void OnInitialized()
    {
        var token = HttpContextAccessor.HttpContext?.Request.Cookies["accessToken"];
        if (!string.IsNullOrWhiteSpace(token))
        {
            AuthProvider.NotifyUserAuthentication(token);
            Navigation.NavigateTo("/feed");
        }
        else
        {
            Navigation.NavigateTo("/user/login");
        }
    }
}

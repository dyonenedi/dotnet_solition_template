<MudCard Class="mb-4">
    <MudCardContent>
        <MudItem Class="mb-2">
            <MudText Typo="Typo.caption" Align="Align.Center" Color="Color.Primary">@Post.UserName</MudText>
            <MudText Typo="Typo.caption" Align="Align.Center" Color="Color.Primary">@Post.InsertDate</MudText>
        </MudItem>
        @* <MudImage Src="https://static.gunnarpeipman.com/wp-content/uploads/2020/01/dotnetconf-blazor-on-focus.png.webp" 
            Alt="Sample Image" 
            Class="w-full"/> *@
        <MudText Typo="Typo.body1" Class="mt-4">
            @Post.Text
        </MudText>
        <MudDivider Class="my-4" />
        <MudText Typo="Typo.body2" Color="Color.Inherit">
            <MudItem Class="d-inline-block mr-4">
                <MudButton Variant="Variant.Text" Color="Color.Surface" OnClick="@LikePost">
                    <MudIcon Size="Size.Small" Icon="@Icons.Material.Filled.Favorite" Color="@(isLiked ? Color.Error : Color.Surface)" Class="me-1"></MudIcon> 10
                </MudButton>
            </MudItem>
        </MudText>
    </MudCardContent>
</MudCard>